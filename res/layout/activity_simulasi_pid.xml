<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="0dp"
    android:paddingLeft="5dp"
    android:paddingRight="0dp"
    android:paddingTop="15dp"
    tools:context=".SimulasiPID" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:padding="5dp">

            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nilai KP" />

            <EditText
                android:id="@+id/etNilaiP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" >

                <requestFocus />
            </EditText>
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nilai KI" />

            <EditText
                android:id="@+id/etNilaiI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" >

                <requestFocus />
            </EditText>
            
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nilai KD" />

            <EditText
                android:id="@+id/etNilaiD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number">
                <requestFocus />
            </EditText>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nilai KC" />

            <EditText
                android:id="@+id/etNilaiC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" 
                android:layout_marginBottom="20dp">
                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btnProses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="@drawable/btncustom"
                android:text="Prosess" />
            
            <Button
                android:id="@+id/btnConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="@drawable/btncustom"
                android:text="Connect" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/PIDGraphView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
