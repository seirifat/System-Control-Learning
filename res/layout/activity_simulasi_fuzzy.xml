<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="0dp"
    android:paddingLeft="5dp"
    android:paddingRight="0dp"
    android:paddingTop="15dp"
    tools:context=".SimulasiFuzzy" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:padding="5dp">

            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nilai PSI" />

            <EditText
                android:id="@+id/etNilaiPSI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" >

                <requestFocus />
            </EditText>
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nilai DPSI" />

            <EditText
                android:id="@+id/etNilaiDPSI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" >

                <requestFocus />
            </EditText>
            
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nilai X" />

            <EditText
                android:id="@+id/etNilaiX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                android:inputType="number">
                <requestFocus />
            </EditText>
            

            <Button
                android:id="@+id/btnProsesFuzzy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="@drawable/btncustom"
                android:text="Prosess" />
            
            <Button
                android:id="@+id/btnConnectFuzzy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="@drawable/btncustom"
                android:text="Connect" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/FUZZYGraphView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
